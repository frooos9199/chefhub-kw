rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // Helper Functions
    // ============================================
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function getUserRole() {
      return isSignedIn() ? getUserData().role : null;
    }
    
    function isCustomer() {
      return isSignedIn() && getUserRole() == 'customer';
    }
    
    function isChef() {
      return isSignedIn() && getUserRole() == 'chef';
    }
    
    function isAdmin() {
      return isSignedIn() && getUserRole() == 'admin';
    }
    
    // ============================================
    // Users Collection
    // ============================================
    match /users/{userId} {
      allow read: if true; // السماح بقراءة بيانات المستخدمين للدوال
      allow create: if request.auth != null;
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // ============================================
    // Chefs Collection
    // ============================================
    match /chefs/{chefId} {
      // الكل يقدر يشوف الشيفات المفعلين
      allow read: if true;
      
      // الشيف يقدر ينشئ ملفه
      allow create: if isOwner(chefId);
      
      // الشيف يقدر يعدل ملفه أو الأدمن
      allow update: if isOwner(chefId) || isAdmin();
      
      // الأدمن فقط يقدر يحذف
      allow delete: if isAdmin();
    }
    
    // ============================================
    // Dishes Collection
    // ============================================
    match /dishes/{dishId} {
      // الكل يقدر يشوف الأصناف
      allow read: if true;
      
      // الشيف يقدر يضيف أصناف
      allow create: if isChef();
      
      // الشيف يقدر يعدل أصنافه فقط
      allow update: if isChef() && resource.data.chefId == request.auth.uid;
      
      // الشيف يقدر يحذف أصنافه أو الأدمن
      allow delete: if (isChef() && resource.data.chefId == request.auth.uid) || isAdmin();
    }
    
    // ============================================
    // Special Orders Collection
    // ============================================
    match /special_orders/{specialOrderId} {
      allow read: if true;
      allow create: if isChef();
      allow update: if isChef() && resource.data.chefId == request.auth.uid;
      allow delete: if (isChef() && resource.data.chefId == request.auth.uid) || isAdmin();
    }
    
    // ============================================
    // Orders Collection
    // ============================================
    match /orders/{orderId} {
      // العميل يشوف طلباته، الشيف يشوف طلباته، الأدمن يشوف كل شي
      allow read: if isSignedIn() && (
        resource.data.customerId == request.auth.uid ||
        resource.data.chefId == request.auth.uid ||
        isAdmin()
      );
      
      // العملاء يقدرون يسوون طلبات
      allow create: if isCustomer();
      
      // الشيف يقدر يحدث حالة طلباته أو الأدمن
      allow update: if isSignedIn() && (
        resource.data.chefId == request.auth.uid ||
        isAdmin()
      );
      
      // الأدمن فقط يقدر يحذف
      allow delete: if isAdmin();
    }
    
    // ============================================
    // Reviews Collection
    // ============================================
    match /reviews/{reviewId} {
      // الكل يقدر يشوف التقييمات
      allow read: if true;
      
      // العميل يقدر يضيف تقييم لطلباته
      allow create: if isCustomer() && request.auth.uid == request.resource.data.customerId;
      
      // الأدمن يقدر يعدل/يخفي التقييمات
      allow update: if isAdmin();
      
      // الأدمن فقط يقدر يحذف
      allow delete: if isAdmin();
    }
    
    // ============================================
    // Invoices Collection
    // ============================================
    match /invoices/{invoiceId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // ============================================
    // Notifications Collection
    // ============================================
    match /notifications/{notificationId} {
      // المستخدم يشوف إشعاراته فقط
      allow read: if isSignedIn() && 
                     (resource.data.userId == request.auth.uid || 
                      resource.data.userId == 'admin' && isAdmin());
      
      // النظام ينشئ الإشعارات (من Cloud Functions أو Admin SDK)
      allow create: if true;
      
      // المستخدم يقدر يعدل إشعاراته فقط (مثلاً يعلم كمقروء)
      allow update: if isSignedIn() && 
                       (resource.data.userId == request.auth.uid || 
                        resource.data.userId == 'admin' && isAdmin());
      
      // الأدمن فقط يقدر يحذف
      allow delete: if isAdmin();
    }
    
    // ============================================
    // WhatsApp & Email Notifications
    // ============================================
    match /whatsapp_notifications/{notificationId} {
      allow read: if isSignedIn();
      allow create: if true;
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    match /email_notifications/{notificationId} {
      allow read: if isSignedIn();
      allow create: if true;
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // ============================================
    // Audit Logs (Admin Only)
    // ============================================
    match /audit_logs/{logId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
    
    // ============================================
    // Settings (Admin Only)
    // ============================================
    match /settings/{settingId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    // ============================================
    // Banners (Admin Only)
    // ============================================
    match /banners/{bannerId} {
      allow read: if true;
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
  }
}
